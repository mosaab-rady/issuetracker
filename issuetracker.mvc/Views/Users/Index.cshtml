@model List<UserViewModel>
@{
	ViewData["Title"] = "Users";
}


<div class="container-fluid my-3">
	@if (Model.Count == 0)
	{
		<div class="row">
			<div class="col text-center">
				<h4>
					No Users
				</h4>
			</div>
		</div>
	}
	else
	{
		<div class="row ms-md-3">
			<div class="container-fluid">


				<div class="row mb-4">
					<div class="col text-center">
						<h4>All Users</h4>
					</div>
				</div>

				<div class="row">
					@foreach (var user in Model)
					{
						<div class="col-md-6 my-3">
							<div class="card">
								<div class="card-header bg-primary">
									User Id : @user.Id
								</div>

								<div class="card-body">
									<div class="d-flex align-items-center flex-wrap">
										<img src="/img/@user.Image" width="80px" height="80px" class="rounded-circle me-4 boxshadow" alt="">
										<div class="">
											<h6 class="fw-bold">
												@user.UserName
											</h6>
											<p>
												@user.Email
											</p>
										</div>
										<div class="d-flex mx-auto">
											<h6>Roles :</h6>
											<ul>
												@foreach (var role in user.Roles)
												{
													<li>@role</li>
												}
											</ul>
										</div>
									</div>
								</div>

								<div class="card-footer text-end">
									<a asp-action="userinformation" asp-controller="users" asp-route-id="@user.Id"
								class=" btn btn-outline-dark">
										User Information <i class="bi bi-chevron-double-right"></i>
									</a>
								</div>

							</div>
						</div>
					}
				</div>


			</div>
		</div>
	}
</div>