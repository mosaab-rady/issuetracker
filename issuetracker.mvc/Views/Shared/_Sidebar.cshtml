@inject SignInManager<AppUser> signInManager;

<div class="border-2 border-end" id="sidenvContainer">
@if(signInManager.IsSignedIn(User))
{
	<div id="mySidenav" class="sidenav text-center ps-3 pe-1" style="position: sticky; left: 0; top: 3.3rem;">

		<div class="mt-3 text-start">
			<a asp-action="create" asp-controller="issues" class="btn btn-outline-danger rounded-3">Create New Issue</a>
		</div>

		<div class="mt-5">

			<div class="my-2">

					<a asp-action="index" asp-controller="home" 
					class=@(Context.Request.Path == "/" ? "btn-primary btn w-100 text-start" : "sidebarLink btn w-100 text-start")>
						<i class="bi bi-house-door"></i>
						&nbsp;Dashboard
					</a>

			</div>

			<div class="my-2">
				<a asp-action="index" asp-controller="projects"
					class=@(Context.Request.Path.ToString().StartsWith("/projects") ? "btn-primary btn w-100 text-start" : "sidebarLink btn w-100 text-start")>
					<i class="bi bi-grid"></i>
					&nbsp;Projects
				</a>
			</div>
			
			<div class="my-2">
				<a asp-action="index" asp-controller="issues"
					class=@(Context.Request.Path.ToString().StartsWith("/issues") ? "btn-primary btn w-100 text-start" : "sidebarLink btn w-100 text-start")>
					<i class="bi bi-x-diamond"></i>
					&nbsp;Issues
				</a>
			</div>
			<div class="my-2">
				<a href="" class="btn w-100 text-start sidebarLink">
					<i class="bi bi-people"></i>
					&nbsp;Users
				</a>
			</div>
			<div class="my-2">
				<a href="" class="btn w-100 text-start sidebarLink">
					<i class="bi bi-files"></i>
					&nbsp;Reports
				</a>
			</div>
			
				<div class="my-2">
				<a asp-action="listroles" asp-controller="adminstration"
					class=@(Context.Request.Path.ToString().StartsWith("/adminstration") ? "btn-primary btn w-100 text-start" : "sidebarLink btn w-100 text-start")>
					<i class="bi bi-box-seam"></i>
					&nbsp;Adminstration
				</a>
			</div>

		</div>
	</div>
}
</div>