@inject SignInManager<AppUser> signInManager;

<nav class="navbar-light bg-white border-bottom box-shadow p-2">
	<div class="container-fluid d-flex align-items-center ">

		<button class="me-4 border border-light activeclick" id="sidebar_toggle_btn">
			<i class="bi bi-list h4"></i>
		</button>

		<a class="text-dark text-decoration-none h4 mb-1 fw-normal" asp-area="" asp-controller="Home" asp-action="Index">
			<i class="bi bi-bug-fill"></i>
			IssueTracker
		</a>

		<div class="ms-auto">
			@if (signInManager.IsSignedIn(User))
			{
				<h6>
					@User.Identity.Name
				</h6>

			}
			else
			{
				<a asp-action="login" asp-controller="account"
				class="text-dark text-decoration-none activeclick px-2 py-1 rounded-pill">SignIn</a>
			}
		</div>

	</div>
</nav>
