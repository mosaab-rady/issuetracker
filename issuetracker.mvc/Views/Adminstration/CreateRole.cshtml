@model CreateRoleViewModel
@{
	ViewData["Title"] = "Create Role";
}

<div class="container-fluid my-3">
	<div class="row">
		<div class="col-md-6 p-4 rounded-3">
			<form asp-action="CreateRole" asp-controller="adminstration" method="post">
				<legend class="mb-4 text-dark">Create New Role</legend>
				<div class="text-danger" asp-validation-summary="All"></div>
				<div class="form-group my-3">
					<label asp-for="Name" class="form-label fw-bold text-muted"></label>
					<input asp-for="Name" class="form-control">
					<span class="text-danger" asp-validation-for="Name"></span>
				</div>
				<div class="form-group my-3 text-end">
					<input type="submit" value="Create Role" class="btn btn-outline-dark">
				</div>
			</form>
		</div>
	</div>
</div>



@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}