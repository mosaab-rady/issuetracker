@model CreateProjectViewModel
@{
	ViewData["Title"] = "Create Project";
}

<div class="container-fluid my-3">
	<div class="row">
		<div class="col-md-6 mx-auto p-4 mt-5 rounded-3 boxshadow">
			<form asp-action="create" asp-controller="projects" method="post">
				<legend class="text-info mb-4">Create New Project</legend>

				<div class="form-group my-3">
					<label asp-for="Name" class="form-label fw-bold text-muted"></label>
					<input asp-for="Name" class="form-control">
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>

				<div class="form-group my-3">
					<label asp-for="StartDate" class="form-label fw-bold text-muted"></label>
					<input asp-for="StartDate" class="form-control">
					<span asp-validation-for="StartDate" class="text-danger"></span>
				</div>

				<div class="form-group my-3">
					<label asp-for="TargetEndDate" class="form-label fw-bold text-muted"></label>
					<input asp-for="TargetEndDate" class="form-control">
					<span asp-validation-for="TargetEndDate" class="text-danger"></span>
				</div>

				<div class="col-md-4">
					<input type="submit" value="Create" class="btn btn-outline-info w-100 mt-4"></input>
				</div>

			</form>
		</div>
	</div>
</div>


@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}