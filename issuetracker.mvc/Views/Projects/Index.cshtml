@model List<ProjectViewModel>
@{
	ViewData["Title"] = "Projects";
}

<div class="container-fluid my-3">
	<div class="row me-md-2">
		<div class="col text-end">
			<a asp-action="create" asp-controller="projects" class="btn btn-primary">
				Create Project
			</a>
		</div>
	</div>
	<div class="row">
		@if (Model.Count() == 0)
		{
			<div class="col text-center">
				<h4>No Projects yet</h4>
			</div>
		}
		else
		{
			<div class="col-md-8 ms-md-5 gap-5 container-fluid px-md-0 px-4">
				<div class="row py-3">
					<div class="col-3 fw-bold">Name</div>
					<div class="col-3 fw-bold">Start Date</div>
					<div class="col-3 fw-bold">Target End Date</div>
					<div class="col-3 fw-bold">Actual End Date</div>
				</div>

				<partial name="_Projects" model="@Model" />
			</div>
		}
	</div>
</div>